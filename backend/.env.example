# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=./data/fingerprint.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Email Configuration
# Opções: gmail, yahoo, outlook, ou custom (para SMTP_HOST personalizado)
EMAIL_SERVICE=yahoo
EMAIL_USER=your-email@yahoo.com
EMAIL_PASSWORD=your-16-char-app-password
EMAIL_FROM_NAME=Teste de Proficiência em Impressões Digitais
EMAIL_FROM_EMAIL=your-email@yahoo.com

# Configurações SMTP (necessário para Yahoo)
SMTP_HOST=smtp.mail.yahoo.com
SMTP_PORT=465
SMTP_SECURE=true

# Image Processing
IMAGE_SOURCE_PATH=./data/images
SAMPLES_PATH=./data/samples

# Image Degradation
IMAGE_WIDTH=712
IMAGE_HEIGHT=855
DEGRADATION_MIN_AREA_PERCENT=10
DEGRADATION_MAX_AREA_PERCENT=25
DEGRADATION_MIN_ECCENTRICITY=0.1
DEGRADATION_MAX_ECCENTRICITY=0.5

# Sample Generation
HAS_SAME_SOURCE_PROBABILITY=0.85
GROUPS_PER_SAMPLE=10
IMAGES_PER_GROUP=11

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
CSRF_TOKEN_EXPIRATION=1h

# Participant Settings
VOLUNTARY_CODE_LENGTH=6
CARRY_CODE_LENGTH=5
SAMPLE_EXPIRATION_DAYS=120

# CSV Configuration
PAIRWISE_COMPARISONS_FILE=./data/pairwise_comparisons_prod.csv
